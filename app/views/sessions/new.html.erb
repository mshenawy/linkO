                        
<div class="container">
    <div class="omb_login">
      <h3 class="omb_authTitle">Login or <a href="javascript:;"><%= link_to "Sign up", signup_path %></a></h3>
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
          <div class="col-xs-4 col-sm-2">
            <a href="javascript:;" class="btn btn-lg btn-block omb_btn-facebook">
              <i class="fa fa-facebook visible-xs"></i>
              <span class="hidden-xs">Facebook</span>
            </a>
          </div>
          <div class="col-xs-4 col-sm-2">
            <a href="javascript:;" class="btn btn-lg btn-block omb_btn-twitter">
              <i class="fa fa-twitter visible-xs"></i>
              <span class="hidden-xs">Twitter</span>
            </a>
          </div>  
          <div class="col-xs-4 col-sm-2">
            <a href="javascript:;" class="btn btn-lg btn-block omb_btn-google">
              <i class="fa fa-google-plus visible-xs"></i>
              <span class="hidden-xs">Google+</span>
            </a>
          </div>  
    </div>
<%= form_for(:session, url: login_path) do |f| %>
    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">  
        
          <div class="input-group">
           <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, class: 'form-control',placeholder: 'Email address', type: 'email', required: '',id: 'exampleInputEmail2' %>
          </div>
          
          <div class="input-group form-group">
           <span class="input-group-addon"><i class="fa fa-lock"></i></span>
             <%= f.password_field :password, class: 'form-control',placeholder: 'Password', type: 'password', required: '',id: 'exampleInputPassword2' %>
          </div>
                    
          <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        
      </div>
      </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-3">
        <label class="checkbox">
          <%= f.check_box :remember_me %>Remember Me
        </label>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p class="omb_forgotPwd">
           <%= link_to "Forget the password ?", new_password_reset_path %>
        </p>
      </div>
    </div>
     
    <% end %>       
  </div>
</div>
