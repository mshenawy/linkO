<%= form_for(current_user.cat_followed_relationships.find_by(follower_id: current_user.id),
html: { method: :delete }, remote: true) do |f| %>
<div><%= hidden_field_tag :following_id, @category.id %></div>
<% @counter = number_to_human(@category.follower.count , :units => {:thousand => "K"},:format =>"%n%u",:precision => 4)  # => "500 K"
                      %>

<%= f.submit "Following | " +@counter.to_s , class: "btn" %>
<% end %>
