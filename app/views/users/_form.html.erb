<div class="main">
  <div class="mainTitle">
    <h2><%= t(:label_createNewAccount) %>  </h2>
  </div>
  <div class="container-form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There are <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved :</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label t(:label_name), class: "required-field" %><br>
    <%= f.text_field :name,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t(:label_userName) , class: "required-field" %><br>
    <%= f.text_field :username, class: "form-control"%>
  </div>
  
  <div class="form-group">
  <%= f.label t(:label_email) , class: "required-field" %>
  <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
  <%= f.label t(:label_password), class: "required-field" %>
  <%= f.password_field :password, class: 'form-control' %>
  </div>
  
  <div class="form-group">
  <%= f.label t(:label_passwordConfirmation) , class: "required-field" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t(:label_image) %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

<div class="form-group">
    <%= f.submit t(:label_register), class: "btn btn-lg btn-primary" %>
  </div>


<% end %>
  </div>
</div>
