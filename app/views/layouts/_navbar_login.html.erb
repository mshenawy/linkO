<div class="row">
  <div class="col-md-12">
    Login via
    <div class="social-buttons">
      <a href="javascript:;" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
      <a href="javascript:;" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
    </div>
                    or
     <!-- <form class="form" role="form" method="post" action="login" accept-charset="UTF-8" id="login-nav"> -->
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email address</label>
          <%= f.email_field :email, class: 'form-control',placeholder: 'Email address', type: 'email', required: '',id: 'exampleInputEmail2' %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">Password</label>
          <%= f.password_field :password, class: 'form-control',placeholder: 'Password', type: 'password', required: '',id: 'exampleInputPassword2' %>
             <div class="help-block text-right">
              <%= link_to "Forget the password ?", new_password_reset_path %>
            </div>
        </div>
        
        
        <div class="form-group">
           <button type="submit" class="btn btn-primary btn-block">Sign in</button>
        </div>
        <div>
          <%= f.label :remember_me, class: "checkbox" do %>
          <%= f.check_box :remember_me %>
          <span>keep me logged-in </span>
        <% end %>
        </div>

     <!-- </form> -->
     <% end %>  
  </div>
  <div class="bottom text-center">
    New here ? 
     <b><%= link_to "Join Us", signup_path   %></b>
    
  </div>
</div>