<div class="main">
<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved: </h2> 
      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label  t(:label_category), class: "required-field" %><br>
    <%= f.collection_select  :category_id ,Category.all,:id,:name, {} , {class: "form-control"} %>
  </div>
  <div class="txtSmall margB25">
    <%= t(:under_labelCategoryMsg) %>
<%= link_to t(:label_here) ,new_category_path  %>.
            </div>


  <div class="form-group">
    <%= f.label t(:label_title) , class: "required-field" %><br>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="txtSmall margB25">
    <%= t(:under_labelTitleMsg) %>
            </div>

  <div class="form-group">
    <%= f.label t(:label_url)  , class: "required-field" %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>
   <div class="txtSmall margB25">
    <%= t(:under_labelUrlMsg) %>
   </div>
   <div class="form-group">
    <%= f.label  t(:label_attachImage) %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
<br>

  <div class="form-group">
    <%= f.submit t(:label_buttonSubmit) , class: "btn btn-lg btn-primary" %>
  </div>

<% end %>

</div>
